{
  "version": "3.0.0",
  "description": "Cross-store matching v3 — transliteration + n-grams + soft category gating",
  "token_similarity": {
    "min_threshold": 0.4,
    "min_common_tokens": 1
  },
  "rules": {
    "same_category_required": false,
    "category_mismatch_penalty": 0.85,
    "brand_same_boost": 0.15,
    "brand_unknown_penalty": 0.85,
    "quantity_incompatible_penalty": 0.4,
    "quantity_compatible_boost": 0.05,
    "price_ratio_warning_threshold": 3.0,
    "ngram_weight": 0.3,
    "token_weight": 0.7
  },
  "stopwords": [
    "или",
    "от",
    "за",
    "в",
    "с",
    "на",
    "и",
    "по",
    "до",
    "the",
    "a",
    "an",
    "of",
    "for",
    "with",
    "-",
    "–",
    "—",
    "различни",
    "видове",
    "избрани",
    "вкусове",
    "продукт",
    "продукт,",
    "маркиран",
    "със",
    "синя",
    "звезда",
    "произход",
    "българия",
    "само",
    "app",
    "супер",
    "цена",
    "про",
    "промо",
    "акция",
    "части",
    "броя",
    "опаковка"
  ],
  "ignore_patterns": [
    "от свежата витрина",
    "от деликатесната витрина",
    "от нашата пекарна",
    "за 1 кг",
    "различни видове",
    "избрани видове",
    "различни вкусове",
    "различни аромати,",
    "продукт, маркиран със синя звезда",
    "произход - българия",
    "само с billa app -",
    "супер цена –"
  ]
}
