{
  "version": "1.0.0",
  "description": "Cross-store matching configuration - DO NOT CHANGE WITHOUT VERSIONING",
  "token_similarity": {
    "min_threshold": 0.4,
    "min_common_tokens": 2
  },
  "rules": {
    "same_category_required": true,
    "brand_boost": 0.1
  },
  "stopwords": ["или", "от", "за", "в", "с", "на", "и", "по", "до", "the", "a", "an", "-", "–", "различни", "видове"],
  "ignore_patterns": [
    "от свежата витрина",
    "от деликатесната витрина", 
    "за 1 кг",
    "различни видове"
  ]
}
